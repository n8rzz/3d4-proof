{
  "name": "3d4-proof",
  "version": "1.0.0",
  "description": "This is a test of the logic required to find winning moves in the game 3d4 (Score Four).",
  "main": "index.js",
  "scripts": {
    "build": "browserify js/src/App.js -t babelify --debug | exorcist js/bundle.js.map > js/bundle.js",
    "bundle": "browserify js/src/App.js -t babelify --outfile js/bundle.js",
    "coverage": "npm test && nyc check-coverage --lines 90",
    "test": "nyc --require babel-core/register -a ava --serial --concurrency=5",
    "report": "nyc report --reporter=lcov"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/n8rzz/3d4-proof.git"
  },
  "author": "Nate Geslin",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/n8rzz/3d4-proof/issues"
  },
  "homepage": "https://github.com/n8rzz/3d4-proof",
  "ava": {
    "files": [
      "**/src/__test/**/*.spec.js",
      "!**/src/__test/testHelper/**/*",
      "!**/node_modules"
    ],
    "verbose": true,
    "require": [
      "babel-core/register"
    ]
  },
  "nyc": {
    "all": true,
    "include": [
      "js/**/*.js"
    ],
    "exclude": [
      "**/node_modules",
      "js/node_modules/**/*",
      "**/vendor",
      "**/*.spec.js",
      "**/*.min.js",
      "**/__test/testHelper",
      "**/App.js",
      "**/GameLogic.js",
      "**/VictoryController.js",
      "**/bundle.js",
      "**/bundle.js.map"
    ]
  },
  "devDependencies": {
    "ava": "^0.15.0",
    "babel-eslint": "^6.1.2",
    "babel-preset-es2015": "^6.13.2",
    "babel-preset-stage-0": "^6.5.0",
    "babelify": "^7.3.0",
    "browserify": "^13.1.0",
    "eslint": "^3.3.1",
    "eslint-config-airbnb": "^10.0.1",
    "eslint-plugin-import": "^1.13.0",
    "eslint-plugin-jsx-a11y": "^2.1.0",
    "eslint-plugin-react": "^6.1.1",
    "nyc": "^6.1.0"
  },
  "dependencies": {
    "babel": "^6.5.2",
    "babel-core": "^6.13.2",
    "babel-polyfill": "^6.13.0",
    "lodash": "^4.15.0",
    "sinon": "^1.17.5"
  }
}
